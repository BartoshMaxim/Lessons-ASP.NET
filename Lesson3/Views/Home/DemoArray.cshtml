@using Lesson3.Models
@model Product[]

@{
    ViewBag.Title = "DemoArray";
}

<h2>DemoArray</h2>

@if (Model.Length > 0)
{
    <table>
        <thead>
            <tr>
                <th>
                    Продукт
                </th>
                <th>
                    Цена
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td>
                        @p.Name
                    </td>
                    <td>
                        @p.Price
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Нет данных о продукте</h2>
}